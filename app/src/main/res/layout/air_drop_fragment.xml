<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_marginRight="@dimen/def_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnr_empty_prtcptn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_marginBottom="@dimen/def_margin"
                android:background="@drawable/rec_lytblue_c8"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/def_padding"
                android:paddingTop="@dimen/padding50"
                android:paddingRight="@dimen/def_padding"
                android:paddingBottom="@dimen/padding50"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/width80"
                    android:layout_height="@dimen/height80"
                    android:layout_gravity="center"
                    android:src="@drawable/dev_airdrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/no_partcpt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size" />

                <LinearLayout
                    android:id="@+id/lnr_add_airdrop_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/width14"
                        android:layout_height="@dimen/height14"
                        android:layout_gravity="center"
                        android:src="@drawable/plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin8"
                        android:layout_marginLeft="@dimen/margin8"
                        android:text="@string/search_ad"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_lbl_size" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_airdrop_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin10"
                android:text="@string/airdrop_list"
                android:textColor="@color/white"
                android:textSize="@dimen/def_ttl_size"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/def_margin"
                android:background="@color/white"
                android:clickable="false"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/radius10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/img_coin_icon"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height40"
                            android:layout_gravity="center"
                            android:layout_weight="0.3"
                            android:src="@drawable/ic_dlg" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/padding5"
                            android:paddingLeft="@dimen/padding5">

                            <TextView
                                android:id="@+id/txt_coin_name_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/airdrop_list"
                                android:textColor="@color/black"
                                android:textSize="@dimen/def_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_coin_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin2"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/airdrop_list"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/text10" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_menu"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/height20"
                            android:layout_gravity="top"
                            android:layout_weight="0.3"
                            android:src="@drawable/dot_menu" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/def_margin"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin5"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/am_holding"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text10" />

                            <TextView
                                android:id="@+id/txt_holding_bal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin2"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/balance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/def_text_size" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_acc_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/rec_google_red_c5"
                                android:paddingLeft="@dimen/padding10"
                                android:paddingTop="@dimen/padding5"
                                android:paddingRight="@dimen/padding10"
                                android:paddingBottom="@dimen/padding5"
                                android:text="@string/inactive"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text10" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/width1"
                                android:layout_height="@dimen/height50"
                                android:layout_gravity="center"
                                android:background="@color/l_grey1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin5"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/days_holding"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text10" />

                            <TextView
                                android:id="@+id/txt_holding_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin2"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/days"
                                android:textColor="@color/black"
                                android:textSize="@dimen/def_text_size" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_seekbar_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/margin5"
                        android:layout_marginRight="@dimen/margin5"
                        android:text="0%"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/text10"
                        android:visibility="visible" />

                    <SeekBar
                        android:id="@+id/seekbar_per"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/width3"
                        android:layout_marginBottom="@dimen/margin10"
                        android:clickable="false"
                        android:max="100"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/seekbar_style"
                        android:thumb="@null"
                        android:visibility="visible" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/def_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/featured_ad"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txt_fad_viewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/view_all"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/def_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rview_fad_coins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/def_margin"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/def_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rec_ad_his"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txt_radh_viewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/view_all"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/def_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rview_radh_coins"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height200"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_marginBottom="@dimen/def_margin"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/lnr_empty_coins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_marginBottom="@dimen/def_margin"
                android:background="@drawable/rec_lytblue_c8"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/width80"
                    android:layout_height="@dimen/height80"
                    android:layout_gravity="center"
                    android:src="@drawable/empty_coins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin10"
                    android:text="@string/empty_ad_list"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size" />

                <LinearLayout
                    android:id="@+id/lnr_add_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/width16"
                        android:layout_height="@dimen/height16"
                        android:layout_gravity="center"
                        android:src="@drawable/plus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin8"
                        android:layout_marginLeft="@dimen/margin8"
                        android:text="@string/add_coins"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_lbl_size" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>