<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/radius5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/txt_copy_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/def_margin"
            android:paddingStart="@dimen/def_padding"
            android:paddingLeft="@dimen/def_padding"
            android:paddingEnd="@dimen/def_padding"
            android:paddingRight="@dimen/def_padding"
            android:text="@string/copy_wallet"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_withdraw_funds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/def_margin"
            android:paddingStart="@dimen/def_padding"
            android:paddingLeft="@dimen/def_padding"
            android:paddingEnd="@dimen/def_padding"
            android:paddingRight="@dimen/def_padding"
            android:text="@string/withdraw_funds"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_config_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin10"
            android:paddingStart="@dimen/def_padding"
            android:paddingLeft="@dimen/def_padding"
            android:paddingEnd="@dimen/def_padding"
            android:paddingRight="@dimen/def_padding"
            android:text="@string/deposit_wallet"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ad_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginBottom="@dimen/def_margin"
            android:paddingStart="@dimen/def_padding"
            android:paddingLeft="@dimen/def_padding"
            android:paddingEnd="@dimen/def_padding"
            android:paddingRight="@dimen/def_padding"
            android:text="@string/ad_history"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_ad_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginBottom="@dimen/def_margin"
            android:paddingStart="@dimen/def_padding"
            android:paddingLeft="@dimen/def_padding"
            android:paddingEnd="@dimen/def_padding"
            android:paddingRight="@dimen/def_padding"
            android:text="@string/ad_info"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/def_margin"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginEnd="@dimen/def_margin"
            android:layout_marginRight="@dimen/def_margin"
            android:layout_marginBottom="@dimen/def_margin"
            android:text="@string/delete"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v7.widget.CardView>