<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_center_blue">

    <LinearLayout
        android:id="@+id/lyt_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dlg_white_trtl_c15"
        android:orientation="vertical"
        android:padding="@dimen/padding25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/padding50"
            android:paddingRight="@dimen/padding50"
            android:text="@string/account_must"
            android:textColor="@color/black"
            android:textSize="@dimen/text22"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signup_email_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/def_btn_height"
            android:layout_marginTop="@dimen/def_margin"
            android:background="@drawable/rec_yellow_c5"
            android:text="@string/signup_email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/def_text_size" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/height1"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:background="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/signup_with"
                android:textColor="@color/grey"
                android:textSize="@dimen/def_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/height1"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:background="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/facebook_lnr_lyt"
                android:layout_width="0dp"
                android:layout_height="@dimen/def_btn_height"
                android:layout_marginEnd="@dimen/margin3"
                android:layout_marginRight="@dimen/margin3"
                android:layout_weight="1"
                android:background="@drawable/rec_fb_blue"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/width15"
                    android:layout_height="@dimen/height15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin25"
                    android:src="@drawable/fblogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin25"
                    android:layout_marginLeft="@dimen/margin25"
                    android:gravity="center"
                    android:text="@string/facebook"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/google_lnr_lyt"
                android:layout_width="0dp"
                android:layout_height="@dimen/def_btn_height"
                android:layout_marginStart="@dimen/margin3"
                android:layout_marginLeft="@dimen/margin3"
                android:layout_weight="1"
                android:background="@drawable/rec_google_red"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/width15"
                    android:layout_height="@dimen/height15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin25"
                    android:src="@drawable/gpluslogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin25"
                    android:layout_marginLeft="@dimen/margin25"
                    android:gravity="center"
                    android:text="@string/google"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/def_margin"
            android:gravity="center"
            android:text="@string/by_registering"
            android:textColor="@color/grey"
            android:textSize="@dimen/text12" />

    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:layout_below="@+id/lyt_lnr"
        android:layout_gravity="center"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_btn_height"
        android:layout_below="@+id/view"
        android:background="@color/l_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:text="@string/have_acc"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_size" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin5"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/login"
            android:textColor="@color/yellow"
            android:textSize="@dimen/def_text_size" />
    </LinearLayout>


</RelativeLayout>