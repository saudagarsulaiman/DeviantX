<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnr_item"
    android:layout_width="@dimen/width280"
    android:layout_height="@dimen/height135"
    android:layout_marginStart="@dimen/margin3"
    android:layout_marginLeft="@dimen/margin3"
    android:layout_marginEnd="@dimen/margin2"
    android:layout_marginRight="@dimen/margin2"
    android:layout_marginBottom="@dimen/margin10"
    android:background="@drawable/rec_lytblue_c5"
    android:orientation="vertical"
    android:padding="@dimen/def_padding">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_news_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/headline"
            android:textColor="@color/white"
            android:textSize="@dimen/def_hint_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_news_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/yellow"
            android:paddingStart="@dimen/padding5"
            android:paddingLeft="@dimen/padding5"
            android:paddingEnd="@dimen/padding5"
            android:paddingRight="@dimen/padding5"
            android:text="@string/text"
            android:textColor="@color/black"
            android:textSize="@dimen/def_hint_size"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_news_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:text="@string/text"
        android:textColor="@color/grey"
        android:textSize="@dimen/def_hint_size" />


</LinearLayout>