<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_no_trans"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/width45"
            android:layout_height="@dimen/height45"
            android:src="@drawable/wallet_history" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_trans_avail"
            android:textColor="@color/google_red"
            android:textSize="@dimen/text22"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_trans_avail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height80"
        android:layout_marginTop="@dimen/margin5"
        android:background="@drawable/rec_lytblue_c1"
        android:orientation="vertical"
        android:padding="@dimen/padding10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_send_type"
                android:layout_width="0dp"
                android:layout_height="@dimen/height20"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:background="@drawable/cir_brdr_red"
                android:padding="@dimen/padding6"
                android:src="@drawable/send" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/white"
                android:textSize="@dimen/def_text_size"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding10"
                android:paddingLeft="@dimen/padding10"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txt_trans_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_lbl_size" />

                <TextView
                    android:id="@+id/txt_trans_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="@string/my_address"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text10" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_trans_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:text="@string/amount"
                android:textColor="@color/google_red"
                android:textSize="@dimen/def_text_size" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>