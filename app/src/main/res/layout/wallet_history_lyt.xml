<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height80"
    android:layout_marginTop="@dimen/margin5"
    android:background="@drawable/rec_lytblue_c1"
    android:orientation="vertical"
    android:padding="@dimen/padding10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageView
            android:id="@+id/img_send_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/height20"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:src="@drawable/dot_inactive" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/hrs"
            android:textColor="@color/white"
            android:textSize="@dimen/def_text_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding10"
            android:paddingLeft="@dimen/padding10"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_trans_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/def_lbl_size" />

            <TextView
                android:id="@+id/txt_trans_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="top"
                android:paddingTop="@dimen/padding2"
                android:text="@string/my_address"
                android:textColor="@color/grey"
                android:textSize="@dimen/def_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_trans_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:gravity="end"
            android:paddingEnd="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:text="@string/amount"
            android:textColor="@color/white"
            android:textSize="@dimen/def_lbl_size" />


    </LinearLayout>


</LinearLayout>