<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <include
        android:id="@+id/tool"
        layout="@layout/toolbar_center_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_participate"
        android:layout_below="@id/tool"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginRight="@dimen/def_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_coin_logo"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:layout_weight="0.6"
                android:src="@drawable/ic_dlg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding5"
                android:paddingLeft="@dimen/padding5">

                <TextView
                    android:id="@+id/txt_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/dev_coin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/txt_coin_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/dev"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/def_text_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnr_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_share_c3"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding5"
                    android:paddingStart="@dimen/padding10"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingEnd="@dimen/padding10"
                    android:paddingRight="@dimen/padding10">

                    <ImageView
                        android:layout_width="@dimen/width15"
                        android:layout_height="@dimen/height15"
                        android:layout_gravity="center"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin10"
                        android:layout_marginLeft="@dimen/margin10"
                        android:text="@string/share"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_lbl_size"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnr_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/lnr_estimated"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin8"
                android:layout_marginRight="@dimen/margin8"
                android:layout_weight="1"
                android:background="@drawable/rec_brinjal1_gradient_c2"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="@dimen/padding10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/estimated"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size" />

                <TextView
                    android:id="@+id/txt_estimated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/balance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_tokens"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin8"
                android:layout_marginLeft="@dimen/margin8"
                android:layout_weight="1"
                android:background="@drawable/rec_lytblue_c1"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="@dimen/padding10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/token_per_claim"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size" />

                <TextView
                    android:id="@+id/txt_tokens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="750 DEV"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:gravity="start"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/description"
            android:textColor="@color/white"
            android:textSize="@dimen/def_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:gravity="start"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/ways_enter"
            android:textColor="@color/white"
            android:textSize="@dimen/text18"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rview_enter_ways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:layout_marginBottom="@dimen/margin10"
            android:visibility="visible" />


    </LinearLayout>


    <Button
        android:id="@+id/btn_participate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_btn_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rec_orange_gradient"
        android:text="@string/participate"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/def_text_size"
        android:textStyle="bold" />

</RelativeLayout>