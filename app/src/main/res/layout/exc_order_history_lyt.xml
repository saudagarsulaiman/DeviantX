<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height80"
        android:layout_marginTop="@dimen/margin10"
        android:background="@drawable/rec_lytblue_c8"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/def_padding"
            android:paddingLeft="@dimen/def_padding">

            <TextView
                android:id="@+id/txt_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="DEV/BTC"
                android:textColor="@color/white"
                android:textSize="@dimen/def_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="15-11 10:48"
                android:textColor="@color/grey"
                android:textSize="@dimen/def_hint_size"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="end|right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/def_margin"
                android:layout_marginRight="@dimen/def_margin"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txt_coin_bal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="11.72961"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_hint_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_coin_bal_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:layout_marginStart="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin5"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="ETH"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_hint_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txt_coin_bal_usd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="64.29"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/def_hint_size"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_coin_bal_usd_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:layout_marginStart="@dimen/margin5"
                        android:layout_marginLeft="@dimen/margin5"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="USDT"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/def_hint_size"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/def_margin"
                android:layout_marginRight="@dimen/def_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/width15"
                    android:layout_height="@dimen/height15"
                    android:layout_gravity="center"
                    android:src="@drawable/close" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>