<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_toolbar_back_height"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/img_chart"
            android:layout_width="0dp"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/height18"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:src="@drawable/candle_chart" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="@string/btc_eth"
            android:textColor="@color/white"
            android:textSize="@dimen/def_text_size"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_history"
            android:layout_width="0dp"
            android:layout_height="@dimen/height15"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_weight="0.4"
            android:src="@drawable/history" />

    </LinearLayout>

</LinearLayout>