<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar_center_back" />

            <TextView
                android:id="@+id/txt_coin_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="BTC/USDT"
                android:textColor="@color/white"
                android:textSize="@dimen/def_ttl_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Vol"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_coin_vol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="187.557.245 USDT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/def_padding"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_coin_bal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|left"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="3700.53"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_ttl_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_coin_bal_usd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="$1,383.73"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_text_size" />

                        <TextView
                            android:id="@+id/txt_coin_per"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin10"
                            android:layout_marginLeft="@dimen/margin10"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="-9.56%"
                            android:textColor="@color/red"
                            android:textSize="@dimen/def_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="High"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/def_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin5"
                            android:gravity="center"
                            android:text="Low"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/def_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="end|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_coin_high"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="3800.21"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_text_size" />

                        <TextView
                            android:id="@+id/txt_coin_low"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin5"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="3606.68"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_text_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_navigator_height"
                android:background="@color/grey_exc"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rltv_mrkt_deph"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_mrkt_deph"
                            android:layout_width="@dimen/width20"
                            android:layout_height="@dimen/height20"
                            android:src="@drawable/graph_up_selected"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_mrkt_deph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin5"
                            android:layout_marginLeft="@dimen/margin5"
                            android:text="@string/market_deph"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/text18"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rltv_mrkt_deph_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/width15"
                            android:layout_height="@dimen/height10"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/up_yellow" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height2"
                            android:layout_alignParentBottom="true"
                            android:background="@color/yellow" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltv_mrkt_trades"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_mrkt_trades"
                            android:layout_width="@dimen/width20"
                            android:layout_height="@dimen/height20"
                            android:src="@drawable/graph_down_unselected"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txt_mrkt_trades"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin5"
                            android:layout_marginLeft="@dimen/margin5"
                            android:text="@string/mrkt_trades"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text18"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rltv_mrkt_trades_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/width15"
                            android:layout_height="@dimen/height10"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/up_yellow" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height2"
                            android:layout_alignParentBottom="true"
                            android:background="@color/yellow" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_mrkt_trades_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/def_toolbar_back_height"
                    android:layout_marginStart="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginEnd="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@string/time1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@string/price"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/amount"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height1"
                    android:background="@color/grey_line" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rview_mrkt_trades"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginEnd="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:layout_marginBottom="@dimen/margin10"
                    android:isScrollContainer="false"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_mrkt_deph_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/def_margin"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bid"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_lbl_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/padding2"
                        android:paddingRight="@dimen/padding2"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/amount"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/price"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rview_bid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ask"
                        android:textColor="@color/white"
                        android:textSize="@dimen/def_lbl_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/padding2"
                        android:paddingLeft="@dimen/padding2"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="@string/amount"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/price"
                            android:textColor="@color/white"
                            android:textSize="@dimen/def_hint_size" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rview_ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin10" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_dropdown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_toolbar_back_height"
                android:layout_marginBottom="@dimen/def_margin"
                android:background="@color/grey_excl"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dropdown"
                    android:layout_width="@dimen/width15"
                    android:layout_height="@dimen/height15"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin5"
                    android:layout_marginLeft="@dimen/margin5"
                    android:src="@drawable/down_yellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_btn_height"
                android:layout_margin="@dimen/def_margin"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/selected_buy"
                    android:gravity="center"
                    android:text="@string/buy"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_sell"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/unselected"
                    android:gravity="center"
                    android:text="@string/sell"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/def_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>