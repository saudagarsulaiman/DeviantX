<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnr_item"
    android:layout_width="@dimen/width150"
    android:layout_height="@dimen/height160"
    android:layout_marginStart="@dimen/margin3"
    android:layout_marginLeft="@dimen/margin3"
    android:layout_marginEnd="@dimen/margin2"
    android:layout_marginRight="@dimen/margin2"
    android:layout_marginBottom="@dimen/margin10"
    android:background="@drawable/rec_lytblue_c5"
    android:orientation="vertical"
    android:padding="@dimen/padding10">

    <ImageView
        android:id="@+id/img_coin"
        android:layout_width="@dimen/width45"
        android:layout_height="@dimen/height45"
        android:src="@drawable/ic_dlg" />

    <TextView
        android:id="@+id/txt_coin_name_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/def_margin"
        android:text="@string/coin_name"
        android:textColor="@color/white"
        android:textSize="@dimen/def_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_coin_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin3"
        android:text="@string/coin_name"
        android:textColor="@color/grey"
        android:textSize="@dimen/def_hint_size" />

    <Button
        android:id="@+id/btn_claim"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height20"
        android:layout_marginTop="@dimen/margin5"
        android:background="@drawable/rec_orange_gradient"
        android:text="@string/claim"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/def_hint_size"
        android:textStyle="bold" />

</LinearLayout>